{% extends '::base.html.twig' %}

{% block content %}
<div class="blog-item">
{% trans_default_domain 'FOSUserBundle' %}

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
        <div class="flash-{{ type }}">
                    {{ message }}
            </div>
            {% endfor %}
        {% endfor %}



{% if error %}
            <div>{{ error|trans }}</div>
{% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post" id="sign-in" class="navbar-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" />

                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password"  class="form-control" required="required" />

                <input type="checkbox" id="remember_me" name="_remember_me"  value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                <input style="float: right;margin-top: 10px" type="submit" id="_submit" class="btn btn-default" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </form>
        </div>
{% endblock content %}
