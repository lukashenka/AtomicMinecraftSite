{% extends 'AtomicBlogBundle::layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}


{% block title %}
Профиль 
{% endblock title %}

{% block content %}

<div class="blog-item">
    <div class="profile-inf divided">
        <h3>Профиль</h3>
    {% render controller('AtomicUserBundle:Profile:show') %}

    {% render controller('AtomicUserBundle:Permission:show') %}

    </div>
</div>
<div class="blog-item">
    <div class="profile-inf divided">
        <h3>Сменить привелегии</h3>
        <p>При покупке нового статуса текущий будет сброшен. 
            Новый статус будет действителен ровно месяц начиная с текущей даты.</p>
        <p>Стоимость статуса Vip - {{status_cost.vip }} р.</p>
        <p>Стоимость статуса Premium - {{status_cost.premium}} р.</p>
                 {% render controller('AtomicUserBundle:Permission:changePermissionForm') %}


    </div>
</div>

<div class="blog-item">
    <div class="profile-inf divided">
        <h3>Изменить пароль</h3>
        <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(change_password_form) }} method="POST" class="fos_user_change_password">
      {{ form_start(change_password_form) }}

         {{ form_errors(change_password_form) }}

          {{ form_row(change_password_form.current_password, { 'attr': {'class': 'form-control'} }) }}

          {{ form_row(change_password_form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}

          {{ form_row(change_password_form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                <div>
                    <input type="submit" class="btn btn-default" value="Обновить" />
                </div>
        {{ form_end(change_password_form) }}
            </form>
        </div>

   {% include 'AtomicUserBundle:Profile:edit.profile.form.twig' %}
    </div>
{%endblock %}