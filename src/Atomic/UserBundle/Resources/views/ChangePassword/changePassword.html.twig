{% extends 'AtomicBlogBundle::layout.html.twig' %}

{% block content %}


<div class="profile-inf divided">
    <h3>Изменить пароль</h3>
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(change_password_form) }} method="POST" class="fos_user_change_password">
         {{ form_start(change_password_form) }}
         {{ form_errors(change_password_form) }}
         {{ form_row(change_password_form.current_password, { 'attr': {'class': 'form-control'} }) }}
         {{ form_row(change_password_form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
         {{ form_row(change_password_form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
            <div>
                <input type="submit" class="btn btn-default" value="Обновить" />
            </div>
        {{ form_end(change_password_form) }}
        </form>
    </div>

{%endblock %}